package utils

import models._
import play.api.libs.json._

object Implicits {

  implicit val SpecElementWrites = new Writes[SpecElement] {
    def writes(element: SpecElement) =
      Json.obj(element.name -> Json.obj("active" -> element.active))
  }

  implicit val ElementListWrites = new Writes[List[SpecElement]] {
    def writes(list: List[SpecElement]) = {
      var jsObj = Json.obj();
      var jsArray = Json.arr()
      list map { elm =>
        jsObj = jsObj ++  Json.obj(elm.name -> Json.obj("ac"))//Json.toJson(elm)
      }
      jsArray
    }
  }
}
